{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest"]
  },
  "coverageDirectory": "./coverage",
  "coverageReporters": ["clover", "json", "lcov", "text"],
  "collectCoverageFrom": ["src/**/*.ts"],
  "globalTeardown": "<rootDir>/test/global-teardown.ts",
  "timeout": 10000
}
